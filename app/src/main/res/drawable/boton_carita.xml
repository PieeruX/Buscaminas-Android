    //Relleno gris claro
    <item android:bottom="3dp" android:right="3dp" android:top="3dp" android:left="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/btn_carita_relleno"/>
        </shape>
    </item>

</layer-list>
